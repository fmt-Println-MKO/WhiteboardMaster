<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/wm_edit_whiteboard_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="@string/enter_title"
        android:inputType="textAutoCorrect"
        android:padding="10dp" />

    <com.diegocarloslima.byakugallery.lib.TouchImageView
        android:id="@+id/wm_edit_whiteboard_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ProgressBar
        android:id="@+id/wm_edit_whiteboard_image_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <EditText
        android:id="@+id/wm_edit_whiteboard_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="@string/enter_description"
        android:inputType="textAutoCorrect"
        android:padding="10dp" />

    <Button

        android:id="@+id/wm_edit_whiteboard_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="@android:color/holo_blue_light"
        android:drawableLeft="@drawable/ic_action_save"
        android:drawableStart="@drawable/ic_action_save"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:text="@string/save_whiteboard"
        android:textColor="@android:color/black" />

</LinearLayout>