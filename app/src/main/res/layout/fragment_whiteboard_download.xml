<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/wm_whiteboard_download_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:padding="5dp"/>

        <it.sephiroth.android.library.imagezoom.ImageViewTouch
            android:id="@+id/wm_whiteboard_download_image"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:contentDescription="whiteboard"
            android:cropToPadding="true"
            android:scaleType="centerInside" />


        <TextView
            android:id="@+id/wm_whiteboard_download_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:padding="5dp"/>

        <ImageButton
            android:id="@+id/wm_whiteboard_download_finished"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:scaleType="fitCenter"

            android:background="@android:color/black"
            android:src="@drawable/ic_action_done"/>

    </LinearLayout>

</FrameLayout>

